# ============================================
# Azure AI Foundry Project Configuration
# ============================================

AZURE_AI_PROJECT_CONNECTION_STRING=eastus.api.azureml.ms;your-subscription-id;your-resource-group;your-project-name

AZURE_AI_PROJECT_ENDPOINT=https://eastus.api.azureml.ms/subscriptions/your-sub-id/resourceGroups/your-rg/providers/Microsoft.MachineLearningServices/workspaces/your-project

AZURE_AI_PROJECT_NAME=helpdesk-project
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=helpdesk-rg

# ============================================
# Azure OpenAI Configuration
# ============================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# ============================================
# Azure AI Search Configuration
# ============================================
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key-here
AZURE_SEARCH_INDEX_NAME=helpdesk-docs

# Azure AI Search Connection (for agent framework)
AZURE_AI_SEARCH_CONNECTION_NAME=search-connection

# ============================================
# Azure DevOps Configuration
# ============================================
AZURE_DEVOPS_ORG_URL=https://dev.azure.com/your-org
AZURE_DEVOPS_PROJECT=YourProject
AZURE_DEVOPS_PAT=your-personal-access-token-here

# ============================================
# Agent Framework Configuration
# ============================================
# Agent behavior settings
AGENT_TEMPERATURE=0.1
AGENT_MAX_TOKENS=2000

# RAG Agent Configuration
RAG_TOP_K=2
RAG_SCORE_THRESHOLD=0
RAG_QUERY_TYPE=vector_semantic_hybrid

# Enable/disable features
ENABLE_CODE_INTERPRETER=false
ENABLE_CONVERSATION_THREADING=true

# ============================================
# API Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
